section.share
  .row
    .large-12.columns
      h3 = t('share', project_owner_name: @project.user.display_name, scope: i18n_scope).html_safe

      .row
        .large-6.small-10.columns.large-centered.small-centered.buttons
          .row
            .large-6.small-12.columns
              = link_to t('.facebook'), "http://www.facebook.com/sharer.php?s=100&p[title]=#{@project.name}&p[summary]=#{@project.headline}&p[url]=#{project_url(@project)}&p[images[0]=#{@project.display_image('project_thumb_facebook')}", class: 'button with-icon facebook', target: :blank
            .large-6.small-12.columns
              = link_to t('.twitter'), "https://twitter.com/intent/tweet?text=#{URI::encode(tweet_text)}", class: 'button with-icon twitter', target: :blank
